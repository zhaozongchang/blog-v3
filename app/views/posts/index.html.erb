
<div class="post-box1">
  <div class="post-box2">
    <h4>最新博文</h4>
  </div>
    <% @posts.each do |post| %>
    <div class="post-main-box">
      <h4 class="post-title">
        <%= link_to(post.title, post_path(post)) %> <small>[ <span class="post-lei"><%= post.category.name %></span> ]</small>
      </h4>
      <p class="post-zhaoyao"><%= post.summary %></p>
      <p class="post-info">
        <span><i class="fa fa-user"></i> <%= post.author %></span>
        <span><i class="fa fa-clock-o"></i> <%= post.created_at.to_s(:ymd) %></span>

        <span>
          <i class="fa fa-eye" style="font-size:15px"></i> <%= post.impressionist_count(:filter=>:session_hash) %> 次浏览
        </span>
        <span>
          <%= post.comments.count %> 条评论
        </span>
        <span> 收藏人气（<%= post.fans.count %>）</span>
        <span class="pull-right">
          <%= link_to("阅读更多", post_path(post), class:"btn btn-info btn-sm")%>
        </span>
      </p>
    </div>
<% end %>
</div>



<a href="#myPage" >
  <span id="gotop">回到<br/>顶部</span>
</a>
